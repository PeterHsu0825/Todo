@model Todo.Models.TodoItem

@{
    ViewData["Title"] = "Delete";
}

<h1>刪除</h1>
<a asp-action="Index"><input type="button" class="btn btn-primary" value="返回清單" /></a>
<br/>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Detail)
        </dt>
        <dd class = "col-sm-10">
            <pre>@Html.DisplayFor(model => model.Detail)</pre>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" onclick="return confirm('確定是否刪除')" value="刪除" class="btn btn-danger" />
    </form>
    
</div>
